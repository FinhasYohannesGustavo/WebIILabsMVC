@using Microsoft.AspNetCore.Identity
@model IdentityUser
@{
    var firstUser = Model;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <form asp-controller="User" asp-action="Update" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label>Id</label>
            <input class="form-control" disabled name="Id" value="@firstUser.Id"/>
        </div>
        <div class="form-group">
            <label>UserName</label>
            <input class="form-control" name="UserName" value="@firstUser.UserName" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input class="form-control" type="email" name="EmailAddress" value="@firstUser.Email" />
        </div>

        <div class="form-group">
            <label>Password</label>
            <input class="form-control" type="password" name="Password" value="@firstUser.PasswordHash" />
        </div>

        

        <div class="form-group">
            <button type="submit" class="btn-light">Update</button>
        </div>


    </form>

</body>
</html>