@using Microsoft.AspNetCore.Identity;
@model List<IdentityRole>;
<h1 class="bg-info text-white">All Users</h1>
<a asp-action="Create">Create Role</a>
<table class="table table-sm table-bordered mt-2">
    <tr>
        <th>Role Name</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="Role"
                   asp-action="AddUser" asp-route-id="@role.Name">Add User</a>
            </td>

            <td>
                <a type="submit" class="btn btn-sm btn-primary" asp-controller="Role"
                   asp-action="Delete" asp-route-id="@role.Name"
                   onclick="return confirm('Do you really want to delete this role?');">Delete</a>
            </td>
        </tr>

    }
</table>
