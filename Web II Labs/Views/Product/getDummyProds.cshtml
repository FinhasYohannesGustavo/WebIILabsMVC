@{
    //View data is a one way transfer method it only sends data from controller to views
    var Products = ViewData["products"] as List<Product>;
}
<h1>@ViewData["Title"]</h1>
<table class="table table-striped">
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Descritpion
        </th>
        <th>
            Price
        </th>
        <th>
            Qunatity
        </th>
    </tr>
    
    @foreach(var prod in Products)
    {
        <tr>
            <td>
                @prod.Id
            </td>
            <td>
                @prod.Name
            </td>
            <td>
                @prod.Description
            </td>
            <td>
                @prod.UnitPrice
            </td>
            <td>
                @prod.Quantity
            </td>
        </tr>
        
    
    }
</table>
