@{
    List<Product> prods = ViewBag.products;
}
<h1>@ViewBag.title</h1>
<table class="table table-striped">
    <tr>
		<th>
			Id
        </th>
        <th>
            Name
        </th>
        <th>
            Descritpion
        </th>
        <th>
            Price
        </th>
        <th>
            Qunatity
        </th>
    </tr>

    @foreach (var prod in prods)
    {
        <tr>
            <td>
                @prod.Id
            </td>
            <td>
                @prod.Name
            </td>
            <td>
                @prod.Description
            </td>
            <td>
                @prod.UnitPrice
            </td>
            <td>
                @prod.Quantity
            </td>
        </tr>


    }
</table>

